#include <stdio.h>
int main(){
    int s[6], even=0, odd=0, ce=0, co=0;
    printf("Enter 6 readings: ");
    for(int i=0;i<6;i++){
        scanf("%d",&s[i]);
        if(s[i]%2==0){ even+=s[i]; ce++; }
        else { odd+=s[i]; co++; }
    }
    printf("Avg Even = %.2f\nAvg Odd = %.2f",
           ce?(float)even/ce:0, co?(float)odd/co:0);
    return 0;
}
